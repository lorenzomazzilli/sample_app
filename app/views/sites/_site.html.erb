<li>  <span class="content">Name: <%= site.name %></span>  <span class="content">Description: <%= wrap(site.description) %></span>  <span class="content">Hostname: <%= site.hostname %></span>  <span class="content">Layout: <%= site.layout %></span>  <span class="timestamp">    Created on <%= site.created_at %>.  </span>  													<%= link_to_if(current_user?(site.user),	"modify", 												edit_site_path(site)) %>													<%= link_to_if(current_user?(site.user),	"delete", 												site, 												method: :delete, 												data: {confirm: "Sure?"}, 												remote: :true,												title: site.name) %></li>